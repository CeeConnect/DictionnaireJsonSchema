{
  "$id": "https://schemas.ceeconnect.fr/bundles/operation/bar/BAR-TH-161",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "BAR-TH-161",
  "type": "object",
  "properties": {
    "batiment": {
      "title": "Logement",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/batiment/type.json",
          "oneOf": [
            {
              "const": "MAISON",
              "title": "Maison individuelle"
            },
            {
              "const": "IMMEUBLE",
              "title": "Immeuble collectif"
            }
          ]
        },
        "anciennete": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/batiment/anciennete.json#/$defs/existant"
        }
      },
      "required": [
        "type",
        "anciennete"
      ]
    },
    "operation": {
      "title": "Opération",
      "type": "object",
      "properties": {
        "typePointSingulier": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/type-point-singulier.json"
        },
        "codeDepartement": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/code-departement.json"
        },
        "quantite": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/quantite.json"
        },
        "temperatureFluide": {
          "title": "Température du fluide caloporteur",
          "type": "number",
          "unit": "°C",
          "minimun": 50
        }
      },
      "required": [
        "typePointSingulier",
        "codeDepartement",
        "quantite",
        "temperatureFluide"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "typePointSingulier": {
                "const": "HORS_ECHANGEUR"
              }
            }
          },
          "then": {
            "properties": {
              "diametreNominal": {
                "title": "Diamètre nominal",
                "type": "number",
                "minimun": 20,
                "unit": "mm"
              }
            },
            "required": [
              "diametreNominal"
            ]
          }
        }
      ]
    }
  },
  "required": [
    "batiment",
    "operation"
  ]
}