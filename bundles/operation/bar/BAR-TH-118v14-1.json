{
  "$id": "https://schemas.ceeconnect.fr/bundles/operation/bar/BAR-TH-118",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "BAR-TH-118",
  "type": "object",
  "properties": {
    "batiment": {
      "title": "Logement",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/$defs/type"
        },
        "anciennete": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/batiment/anciennete.json#/$defs/existant"
        }
      },
      "dependencies": {
        "type": {
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "$ref": "#/$defs/type/$defs/logementCollectif"
                  }
                }
              },
              "then": {
                "properties": {
                  "installationChauffage": {
                    "$ref": "#/$defs/installationChauffage/$defs/collectif"
                  },
                  "logements": {
                    "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/logements.json"
                  }
                },
                "required": [
                  "logements",
                  "installationChauffage"
                ]
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "$ref": "#/$defs/type/$defs/logementIndividuel"
                  }
                }
              },
              "then": {
                "properties": {
                  "energieChauffage": {
                    "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/batiment/energie-chauffage.json"
                  }
                },
                "required": [
                  "energieChauffage"
                ]
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "$ref": "#/$defs/type/$defs/appartement"
                  }
                }
              },
              "then": {
                "properties": {
                  "installationChauffage": {
                    "$ref": "#/$defs/installationChauffage/$defs/individuel"
                  }
                },
                "required": [
                  "typeInstallationChauffage"
                ]
              }
            }
          ]
        }
      },
      "required": [
        "type",
        "anciennete"
      ]
    },
    "operation": {
      "title": "Op√©ration",
      "type": "object",
      "properties": {
        "codeDepartement": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/code-departement.json"
        }
      },
      "required": [
        "codeDepartement"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "batiment": {
            "properties": {
              "type": {
                "$ref": "#/$defs/type/$defs/maison"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "operation": {
            "properties": {
              "surfaceChauffee": {
                "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/surface-chauffee.json"
              }
            },
            "required": [
              "surfaceChauffee"
            ]
          }
        }
      }
    }
  ],
  "required": [
    "batiment",
    "operation"
  ],
  "$defs": {
    "type": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/batiment/type.json"
    },
    "installationChauffage": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/operation/bar/batiment/installation-chauffage.json"
    }
  }
}
