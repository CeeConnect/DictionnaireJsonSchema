{
  "$id": "https://schemas.ceeconnect.fr/bundles/dossier/attestation-honneur-b",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "Partie B",
  "description": "Bénéficiaire de l'opération d'économies d'énergie",
  "type": "object",
  "properties": {
    "demandeur": {
      "title": "Demandeur",
      "type": "object",
      "properties": {
        "raisonSociale": {
          "$ref": "#/$defs/demandeur/properties/raisonSociale"
        }
      }
    },
    "beneficiaire": {
      "title": "Bénéficiaire",
      "type": "object",
      "properties": {
        "nature": {
          "$ref": "#/$defs/beneficiaire/$defs/nature"
        },
        "nom": {
          "$ref": "#/$defs/beneficiaire/$defs/nom",
          "title": "Nom du signataire",
          "description": ""
        },
        "prenom": {
          "$ref": "#/$defs/beneficiaire/$defs/prenom",
          "title": "Prénom du signataire",
          "description": ""
        }
      },
      "required": [
        "nature",
        "nom",
        "prenom"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "nature": {
                "const": "PERSONNE_MORALE"
              }
            }
          },
          "then": {
            "properties": {
              "fonction": {
                "$ref": "#/$defs/beneficiaire/$defs/fonction"
              },
              "raisonSociale": {
                "$ref": "#/$defs/beneficiaire/$defs/raisonSociale"
              },
              "siren": {
                "$ref": "#/$defs/beneficiaire/$defs/siren"
              },
              "telephone": {
                "$ref": "#/$defs/beneficiaire/$defs/telephone"
              },
              "email": {
                "$ref": "#/$defs/beneficiaire/$defs/email"
              },
              "adresse": {
                "$ref": "#/$defs/beneficiaire/$defs/adresse"
              }
            },
            "required": [
              "raisonSociale",
              "siren",
              "adresse",
              "telephone",
              "email"
            ]
          },
          "else": {
            "properties": {
              "telephone": {
                "$ref": "#/$defs/beneficiaire/$defs/telephone"
              },
              "email": {
                "$ref": "#/$defs/beneficiaire/$defs/email"
              },
              "adresse": {
                "$ref": "#/$defs/beneficiaire/$defs/adresse"
              }
            },
            "required": [
              "adresse",
              "telephone",
              "email"
            ]
          }
        }
      ]
    }
  },
  "required": [
    "demandeur",
    "beneficiaire"
  ],
  "$defs": {
    "demandeur": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/bundles/demandeur.json"
    },
    "beneficiaire": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/bundles/beneficiaire.json"
    }
  }
}
