{
  "$id": "https://schemas.ceeconnect.fr/bundles/dossier/cadre-contribution",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "Cadre de contribution",
  "type": "object",
  "properties": {
    "demandeur": {
      "$ref": "#/$defs/demandeur"
    },
    "beneficiaire": {
      "allOf": [
        {
          "$ref": "#/%24defs/beneficiaire/$defs/personnePhysique"
        },
        {
          "if": {
            "properties": {
              "nature": {
                "const": "PERSONNE_MORALE"
              }
            }
          },
          "then": {
            "properties": {
              "type": {
                "oneOf": [
                  {
                    "const": "SYNDIC_COPROPRIETE",
                    "title": "Syndic de copropriété"
                  }
                ]
              }
            }
          }
        }
      ]
    },
    "valorisation": {
      "$ref": "#/$defs/valorisation"
    }
  },
  "required": [
    "demandeur",
    "beneficiaire",
    "valorisation"
  ],
  "$defs": {
    "demandeur": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/bundles/demandeur.json"
    },
    "beneficiaire": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/bundles/beneficiaire.json"
    },
    "valorisation": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/bundles/valorisation.json"
    }
  }
}