{
  "$id": "https://schemas.ceeconnect.fr/bundles/procedure/beneficiaire",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "$comment": "Trois scénarios : Personne morale / Personne physique / Syndic de copropriété",
  "title": "Bénéficiaire",
  "description": "Bénéficiaire de l'opération d'économies d'énergie",
  "type": "object",
  "properties": {
    "nature": {
      "$ref": "#/$defs/nature"
    }
  },
  "required": [
    "nature"
  ],
  "allOf": [
    {
      "if": {
        "oneOf": [
          {
            "$ref": "#/$defs/nature/$defs/personnePhysique"
          }
        ]
      },
      "then": {
        "allOf": [
          {
            "$ref": "#/$defs/personnePhysique"
          }
        ]
      }
    },
    {
      "if": {
        "oneOf": [
          {
            "$ref": "#/$defs/nature/$defs/personneMorale"
          }
        ]
      },
      "then": {
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "const": "SYNDICAT_COPROPRIETAIRES"
                }
              }
            },
            "then": {
              "allOf": [
                {
                  "$ref": "#/$defs/copropriete"
                }
              ]
            },
            "else": {
              "allOf": [
                {
                  "$ref": "#/$defs/personneMorale"
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "$defs": {
    "nature": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/personnalite-juridique.json"
    },
    "adresse": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/adresse.json"
    },
    "telephone": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/telephone.json"
    },
    "email": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/email.json"
    },
    "siren": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/siren.json"
    },
    "raisonSociale": {
      "title": "Raison sociale",
      "type": "string",
      "maxLength": 240
    },
    "nom": {
      "title": "Nom",
      "type": "string",
      "maxLength": 240
    },
    "prenom": {
      "title": "Prénom",
      "type": "string",
      "maxLength": 240
    },
    "fonction": {
      "title": "Fonction",
      "description": "Fonction du représentant légal de l'entreprise",
      "type": "string",
      "maxLength": 240
    },
    "type": {
      "title": "Type",
      "type": "string",
      "oneOf": [
        {
          "const": "PROPRIETAIRE_UNIQUE",
          "title": "Propriétaire unique"
        },
        {
          "const": "LOCATAIRE",
          "title": "Locataire de l'équipement"
        },
        {
          "const": "COPROPRIETAIRE",
          "title": "Copropriétaire des équipements"
        },
        {
          "const": "MAITRE_OUVRAGE",
          "title": "Maître d'ouvrage"
        },
        {
          "const": "OCCUPANT_FINANCEUR",
          "title": "Occupant financeur"
        },
        {
          "const": "SYNDICAT_COPROPRIETAIRES",
          "title": "Syndicat de copropriétaires"
        },
        {
          "const": "COLLECTIVITE_AFFECTATAIRE",
          "title": "Collectivité affectataire"
        }
      ]
    },
    "personnePhysique": {
      "title": "Bénéficiaire",
      "description": "Bénéficiaire de l'opération d'économies d'énergie",
      "type": "object",
      "properties": {
        "nature": {
          "$ref": "#/$defs/nature/$defs/personnePhysique"
        },
        "type": {
          "$ref": "#/$defs/type",
          "oneOf": [
            {
              "const": "PROPRIETAIRE_UNIQUE",
              "title": "Propriétaire unique"
            },
            {
              "const": "LOCATAIRE",
              "title": "Locataire de l'équipement"
            },
            {
              "const": "COPROPRIETAIRE",
              "title": "Copropriétaire des équipements"
            },
            {
              "const": "MAITRE_OUVRAGE",
              "title": "Maître d'ouvrage"
            },
            {
              "const": "OCCUPANT_FINANCEUR",
              "title": "Occupant financeur"
            }
          ]
        },
        "nom": {
          "$ref": "#/$defs/nom"
        },
        "prenom": {
          "$ref": "#/$defs/prenom"
        },
        "telephone": {
          "$ref": "#/$defs/telephone"
        },
        "email": {
          "$ref": "#/$defs/email"
        },
        "adresse": {
          "$ref": "#/$defs/adresse"
        }
      },
      "required": [
        "nature",
        "type",
        "nom",
        "prenom",
        "adresse",
        "telephone",
        "email"
      ]
    },
    "personneMorale": {
      "title": "Bénéficiaire",
      "description": "Bénéficiaire de l'opération d'économies d'énergie",
      "type": "object",
      "properties": {
        "nature": {
          "$ref": "#/$defs/nature/$defs/personneMorale"
        },
        "type": {
          "$ref": "#/$defs/type",
          "oneOf": [
            {
              "const": "PROPRIETAIRE_UNIQUE",
              "title": "Propriétaire unique"
            },
            {
              "const": "LOCATAIRE",
              "title": "Locataire de l'équipement"
            },
            {
              "const": "COPROPRIETAIRE",
              "title": "Copropriétaire des équipements"
            },
            {
              "const": "MAITRE_OUVRAGE",
              "title": "Maître d'ouvrage"
            },
            {
              "const": "SYNDICAT_COPROPRIETAIRES",
              "title": "Syndicat de copropriétaires"
            },
            {
              "const": "COLLECTIVITE_AFFECTATAIRE",
              "title": "Collectivité affectataire"
            }
          ]
        },
        "raisonSociale": {
          "$ref": "#/$defs/raisonSociale"
        },
        "siren": {
          "$ref": "#/$defs/siren"
        },
        "nom": {
          "$ref": "#/$defs/nom",
          "description": "Nom du représentant légal de l'entreprise"
        },
        "prenom": {
          "$ref": "#/$defs/prenom",
          "description": "Prénom du représentant légal de l'entreprise"
        },
        "fonction": {
          "$ref": "#/$defs/fonction"
        },
        "telephone": {
          "$ref": "#/$defs/telephone"
        },
        "email": {
          "$ref": "#/$defs/email"
        },
        "adresse": {
          "$ref": "#/$defs/adresse"
        }
      },
      "required": [
        "nature",
        "type",
        "raisonSociale",
        "siren",
        "nom",
        "prenom",
        "fonction",
        "adresse",
        "telephone",
        "email"
      ]
    },
    "copropriete": {
      "title": "Bénéficiaire",
      "description": "Bénéficiaire de l'opération d'économies d'énergie",
      "type": "object",
      "properties": {
        "nature": {
          "$ref": "#/$defs/nature/$defs/personneMorale"
        },
        "type": {
          "$ref": "#/$defs/type",
          "const": "SYNDICAT_COPROPRIETAIRES"
        },
        "raisonSociale": {
          "$ref": "#/$defs/raisonSociale"
        },
        "siren": {
          "$ref": "#/$defs/siren"
        },
        "nom": {
          "$ref": "#/$defs/nom",
          "description": "Nom du représentant légal de l'entreprise"
        },
        "prenom": {
          "$ref": "#/$defs/prenom",
          "description": "Prénom du représentant légal de l'entreprise"
        },
        "fonction": {
          "$ref": "#/$defs/fonction"
        },
        "copropriete": {
          "title": "Copropriété",
          "type": "object",
          "properties": {
            "nom": {
              "title": "Nom",
              "type": "string",
              "maxLength": 240
            },
            "adresse": {
              "$ref": "#/$defs/adresse"
            }
          },
          "required": [
            "nom",
            "adresse"
          ]
        },
        "telephone": {
          "$ref": "#/$defs/telephone"
        },
        "email": {
          "$ref": "#/$defs/email"
        },
        "adresse": {
          "$ref": "#/$defs/adresse"
        }
      },
      "required": [
        "nature",
        "type",
        "raisonSociale",
        "siren",
        "nom",
        "prenom",
        "fonction",
        "adresse",
        "copropriete",
        "telephone",
        "email"
      ]
    }
  }
}
