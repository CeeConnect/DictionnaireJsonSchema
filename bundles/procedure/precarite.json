{
  "$id": "https://schemas.ceeconnect.fr/bundles/operation/precarite",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "$comment": "Prise en compte de la précarité énergétique",
  "title": "Précarité énergétique",
  "type": "object",
  "properties": {
    "precarite": {
      "title": "Opération au bénéfice d'un ménage en situation de précarité énergétique",
      "type": "boolean"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "precarite": {
            "const": true
          }
        },
        "required": [
          "precarite"
        ]
      },
      "then": {
        "properties": {
          "type": {
            "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/precarite/type.json"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/precarite/type.json#/$defs/bailleurSocial"
                }
              },
              "required": [
                "type"
              ]
            },
            "then": {
              "properties": {
                "codeDepartement": {
                  "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/code-departement.json"
                },
                "logements": {
                  "title": "Nombre de logements",
                  "type": "integer",
                  "exclusiveMinimum": 0
                },
                "logementsSociaux": {
                  "title": "Nombre de logements sociaux",
                  "description": "Nombre de logements gérés par un bailleur social",
                  "type": "integer",
                  "minimum": 0,
                  "maximumFormat": {
                    "$data": "1/logements"
                  }
                },
                "menagesPrecaires": {
                  "title": "Nombre de ménages précaires",
                  "type": "integer",
                  "minimum": 0,
                  "maximumFormat": {
                    "$data": "1/logements"
                  }
                }
              },
              "required": [
                "codeDepartement",
                "logements",
                "logementsSociaux",
                "menagesPrecaires"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/precarite/type.json#/$defs/coproprieteAnah"
                }
              },
              "required": [
                "type"
              ]
            },
            "then": {
              "properties": {
                "partPrecaires": {
                  "title": "Part de ménages précaires",
                  "description": "Information issue des résultats de l'enquête sociale sur au moins 50% des occupants",
                  "type": "number",
                  "maximum": 100,
                  "minimum": 0
                }
              },
              "required": [
                "partPrecaires"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/precarite/type.json#/$defs/quartierPrioritaire"
                }
              },
              "required": [
                "type"
              ]
            },
            "then": {
              "properties": {
                "codeDepartement": {
                  "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/code-departement.json"
                }
              },
              "required": [
                "codeDepartement"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/precarite/type.json#/$defs/autres"
                }
              },
              "required": [
                "type"
              ]
            },
            "then": {
              "properties": {
                "menages": {
                  "title": "Nombre total de ménages",
                  "type": "integer",
                  "minimumExclusive": 0
                },
                "menagesPrecaires": {
                  "title": "Nombre de ménages précaires",
                  "type": "integer",
                  "minimum": 0,
                  "maximumFormat": {
                    "$data": "1/menages"
                  }
                }
              },
              "required": [
                "menages",
                "menagesPrecaires"
              ]
            }
          }
        ]
      }
    }
  ],
  "$defs": {
    "logementIndividuel": {
      "title": "Précarité énergétique",
      "type": "object",
      "properties": {
        "precarite": {
          "$ref": "#/$defs/precarite"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "precarite": {
                "const": true
              }
            }
          },
          "then": {
            "properties": {
              "type": {
                "$ref": "#/$defs/type",
                "oneOf": [
                  {
                    "const": "8.1",
                    "title": "Ménage en situation de précarité énergétique"
                  },
                  {
                    "const": "8.2",
                    "title": "Opération concernant au moins un logement locatif social"
                  },
                  {
                    "const": "8.5",
                    "title": "Autres cas"
                  }
                ]
              }
            },
            "allOf": [
              {
                "$ref": "#/$defs/main"
              }
            ]
          }
        }
      ]
    },
    "logementCollectif": {
      "title": "Précarité énergétique",
      "type": "object",
      "properties": {
        "precarite": {
          "$ref": "#/$defs/precarite"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "precarite": {
                "const": true
              }
            }
          },
          "then": {
            "properties": {
              "type": {
                "$ref": "#/$defs/type",
                "oneOf": [
                  {
                    "const": "8.2",
                    "title": "Opération concernant au moins un logement locatif social"
                  },
                  {
                    "const": "8.3",
                    "title": "Copropriété objet d'une subvention de l'Agence nationale de l'habitat"
                  },
                  {
                    "const": "8.4",
                    "title": "Quartier prioritaire de la politique de la ville"
                  },
                  {
                    "const": "8.5",
                    "title": "Autres cas"
                  }
                ]
              }
            },
            "allOf": [
              {
                "$ref": "#/$defs/main"
              }
            ]
          }
        }
      ]
    }
  }
}
