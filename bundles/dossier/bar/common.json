{
  "$id": "https://schemas.ceeconnect.fr/bundles/procedure/bar/common",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "type": "object",
  "properties": {
    "$context": {
      "properties": {
        "beneficiaire": {
          "properties": {
            "nature": {
              "type": "string"
            }
          }
        }
      }
    },
    "dateEngagement": {
      "title": "Date d'engagement",
      "description": "Date de signature du devis ou du contrat",
      "type": "string",
      "format": "date",
      "formatMinimum": {
        "$data": "1/dateVisitePrealable"
      }
    },
    "dateRealisation": {
      "title": "Date de réalisation",
      "description": "Date de preuve de réalisation de l’opération (ex : date de la facture)",
      "type": "string",
      "format": "date",
      "formatMinimum": {
        "$data": "1/dateEngagement"
      }
    },
    "dateVisitePrealable": {
      "title": "Date de visite préalable",
      "description": "Date de la visite préalable du bâtiment où ont eu lieu les travaux",
      "type": "string",
      "format": "date"
    },
    "dateDebut": {
      "title": "Date de début des travaux",
      "type": "string",
      "format": "date",
      "formatMinimum": {
        "$data": "1/dateEngagement"
      }
    },
    "referencePreuveEngagement": {
      "title": "Référence de la facture",
      "type": "string",
      "maxLength": 240
    },
    "adresse": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/adresse.json"
    }
  },
  "required": [
    "dateEngagement",
    "adresse"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "$context": {
            "properties": {
              "beneficiaire": {
                "properties": {
                  "nature": {
                    "const": "PERSONNE_MORALE"
                  }
                },
                "required": [
                  "nature"
                ]
              }
            },
            "required": [
              "beneficiaire"
            ]
          }
        },
        "required": [
          "$context"
        ]
      },
      "then": {
        "properties": {
          "site": {
            "title": "Nom du site ou de la propriété",
            "type": "string",
            "maxLength": 240
          }
        },
        "required": [
          "site"
        ]
      }
    }
  ]
}
