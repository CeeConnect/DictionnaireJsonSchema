{
  "$id": "https://schemas.ceeconnect.fr/bundles/dossier/attestation-honneur-qpv",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "Partie QPV",
  "description": "QPV - Quartier prioritaire de la politique de la ville",
  "type": "object",
  "properties": {
    "demandeur": {
      "title": "Demandeur",
      "type": "object",
      "properties": {
        "raisonSociale": {
          "title": "Raison sociale",
          "type": "string",
          "maxLength": 240
        },
        "siren": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/siren.json"
        },
        "email": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/email.json"
        },
        "telephone": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/telephone.json"
        },
        "adresse": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/adresse.json"
        }
      },
      "required": [
        "raisonSociale",
        "siren",
        "email",
        "telephone",
        "adresse"
      ]
    },
    "operation": {
      "title": "Opération",
      "type": "object",
      "properties": {
        "quartierPrioritaire": {
          "title": "Quartier prioritaire",
          "type": "object",
          "properties": {
            "code": {
              "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/code-quartier-prioritaire.json"
            },
            "nom": {
              "title": "Nom",
              "type": "string",
              "maxLength": 240
            }
          },
          "required": [
            "code",
            "nom"
          ]
        },
        "adresse": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/mixins/adresse.json"
        }
      },
      "required": [
        "quartierPrioritaire",
        "adresse"
      ]
    },
    "nom": {
      "title": "Nom du signataure",
      "type": "string",
      "maxLength": 240
    },
    "prenom": {
      "title": "Prénom du signataure",
      "type": "string",
      "maxLength": 240
    },
    "fonction": {
      "title": "Fonction du signataire",
      "type": "string",
      "maxLength": 240
    }
  },
  "required": [
    "demandeur",
    "operation",
    "nom",
    "prenom",
    "fonction"
  ]
}
