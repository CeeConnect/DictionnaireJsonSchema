{
  "$id": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/bundle/fiche/bar/BAR-TH-125",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "BAR-TH-125",
  "type": "object",
  "properties": {
    "batiment": {
      "title": "Logement",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/bar/batiment/type.json"
        },
        "anciennete": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/bar/batiment/existant.json"
        }
      },
      "dependencies": {
        "type": {
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "IMMEUBLE"
                  }
                }
              },
              "then": {
                "properties": {
                  "logements": {
                    "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/bar/batiment/logements.json"
                  }
                },
                "required": [
                  "logements"
                ]
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "enum": [
                      "MAISON",
                      "APPARTEMENT"
                    ]
                  }
                }
              },
              "then": {
                "properties": {
                  "surfaceHabitable": {
                    "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/bar/batiment/surface-habitable.json"
                  }
                },
                "required": [
                  "surfaceHabitable"
                ]
              }
            }
          ]
        }
      },
      "required": [
        "type",
        "anciennete"
      ]
    },
    "operation": {
      "title": "Opération",
      "type": "object",
      "properties": {
        "codeDepartement": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/common/code-departement.json"
        },
        "typeVmcDoubleFlux": {
          "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/bar/operation/type-vmc-double-flux.json"
        }
      },
      "required": [
        "codeDepartement",
        "typeVmcDoubleFlux"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "batiment": {
            "properties": {
              "type": {
                "const": "IMMEUBLE"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "operation": {
            "properties": {
              "typeInstallation": {
                "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/bar/operation/type-installation.json",
                "oneOf": [
                  {
                    "const": "COLLECTIF",
                    "title": "Installation collective"
                  }
                ]
              },
              "typeVmcDoubleFlux": {
                "oneOf": [
                  {
                    "const": "AUTOREGLABLE",
                    "title": "Autoréglable"
                  }
                ]
              }
            },
            "required": [
              "typeInstallation"
            ]
          }
        }
      }
    }
  ],
  "required": [
    "batiment",
    "operation"
  ]
}