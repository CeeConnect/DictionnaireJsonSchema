            "required": [
              "coefficientSurfacique",
              "facteurSolaire"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "typeFenetre": {
                "const": "PORTE_FENETRE"
              }
            }
          },
          "then": {
            "properties": {
              "coefficientSurfacique": {
                "title": "Coefficient de transmission surfacique Uw",
                "type": "number",
                "maximum": 1.4,
                "unit": "W/m².K"
              },
              "facteurSolaire": {
                "title": "Facteur solaire Sw",
                "type": "number",
