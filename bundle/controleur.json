{
  "$id": "https://schemas.ceeconnect.fr/bundle/controleur",
  "$schema": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/meta-schema.json",
  "title": "Contrôleur",
  "description": "Organisme de contrôle",
  "type": "object",
  "properties": {
    "raisonSociale": {
      "title": "Raison sociale",
      "type": "string",
      "maxLength": 240
    },
    "siren": {
      "$ref": "#/$defs/siren"
    },
    "accreditation": {
      "title": "Accréditation COFRAC",
      "type": "object",
      "properties": {
        "numero": {
          "title": "Numéro d'accréditation",
          "type": "string",
          "maxLength": 240
        },
        "finValidite": {
          "title": "Date de fin de validité",
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "numero",
        "finValidite"
      ]
    }
  },
  "$defs": {
    "siren": {
      "$ref": "https://raw.githubusercontent.com/CeeConnect/DictionnaireJsonSchema/main/type/common/siren.json"
    }
  },
  "required": [
    "raisonSociale",
    "siren",
    "accreditation"
  ]
}